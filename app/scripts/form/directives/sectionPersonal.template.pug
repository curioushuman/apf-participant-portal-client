p.intro(
  layout-padding,
  md-colors="{background: 'default-background-hue-2'}",
  ng-show='vm.page.contact.exists'
) Hi {{ vm.page.contact.FirstName }}, we found you in our 
  | database. Please check your information is up to date.
md-input-container.md-block(flex-xs='40', flex-gt-sm='25')
  label Salutation
  md-select(
    ng-model='vm.page.contact.Salutation',
    name='contactSalutation',
    ng-set-focus='personal'
    )
    md-option(ng-repeat='salutation in vm.page.salutations', value='{{ salutation }}')
      | {{ salutation }}
md-input-container.md-block(flex-xs, flex-gt-sm='50')
  label First name
  input(ng-model='vm.page.contact.FirstName', name='contactFirstName', required, md-no-asterisk)
  div(ng-messages='vm.form.contactFirstName.$error')
    div(ng-message='required')
      | Please enter a first name
md-input-container.md-block(flex-xs, flex-gt-sm='50')
  label Last name
  input(ng-model='vm.page.contact.LastName', name='contactLastName', required, md-no-asterisk)
  div(ng-messages='vm.form.contactLastName.$error')
    div(ng-message='required')
      | Please enter a last name
md-input-container.md-block(flex-xs, flex-gt-sm='50')
  label Your preferred name (optional)
  input(
    ng-model='vm.page.contact.Preferred_name__c',
    name='contactPreferredName'
  )
md-input-container.md-block(flex-xs, flex-gt-sm='50')
  label Gender
  md-select(ng-model='vm.page.contact.Gender__c', name='contactGender', required, md-no-asterisk)
    md-option(ng-repeat='gender in vm.page.genders', value='{{ gender }}')
      | {{ gender }}
  div(ng-messages='vm.form.contactGender.$error')
    div(ng-message='required')
      | This field is required
md-input-container.md-block(flex, ng-show='vm.page.contact.Gender__c === "Another term"')
  label Please specify your preferred term for Gender
  input(ng-model='vm.page.contact.Gender_another_term__c', name='contactGenderAnotherTerm')
  //- div(ng-messages='vm.form.contactGenderAnotherTerm.$error')
    //- div(ng-message='required')
    //-   | Please enter a last name
md-input-container.md-block(flex)
  label If you have dietary requirements please list them here (optional)
  textarea(
    ng-model='vm.page.contact.Dietary_requirements__c',
    name='contactDietaryRequirements',
    md-maxlength='150',
    rows='3',
    md-select-on-focus
  )
  //- div.hint
  //-   | Should we add some help text?
  //- div(ng-messages='vm.form.contactDietaryRequirements.$error')
  //-   div(ng-message='required')
  //-     | This field is required
md-input-container.md-block(flex)
  label If you have accessibility requirements please list them here (optional)
  textarea(
    ng-model='vm.page.contact.Accessibility_requirements__c',
